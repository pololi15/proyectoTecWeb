  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Triple Carousel Functionality
      const track = document.querySelector('.triple-carousel-track');
      const slides = Array.from(document.querySelectorAll('.triple-carousel-slide'));
      const nextBtn = document.getElementById('nextBtn');
      const prevBtn = document.getElementById('prevBtn');
      const pagination = document.querySelectorAll('.page-indicator');
      
      let slideWidth = slides[0].getBoundingClientRect().width;
      let slidesPerView = 3;
      let slideIndex = 0;
      let maxIndex = slides.length - slidesPerView;
      
      // Set initial position
      function updateCarousel() {
        // Recalculate dimensions based on viewport
        slideWidth = slides[0].getBoundingClientRect().width;
        
        // Adjust slidesPerView based on screen size
        if (window.innerWidth < 768) {
          slidesPerView = 1;
        } else if (window.innerWidth < 1024) {
          slidesPerView = 2;
        } else {
          slidesPerView = 3;
        }
        
        maxIndex = slides.length - slidesPerView;
        
        // Update track position
        track.style.transform = `translateX(${-slideIndex * slideWidth}px)`;
        
        // Update pagination
        const currentPage = Math.ceil((slideIndex + 1) / slidesPerView);
        pagination.forEach((dot, i) => {
          if (i + 1 === currentPage) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }
      
      // Initialize carousel
      updateCarousel();
      
      // Event listeners for buttons
      nextBtn.addEventListener('click', () => {
        if (slideIndex < maxIndex) {
          slideIndex++;
          updateCarousel();
        } else {
          // Loop back to start
          slideIndex = 0;
          updateCarousel();
        }
      });
      
      prevBtn.addEventListener('click', () => {
        if (slideIndex > 0) {
          slideIndex--;
          updateCarousel();
        } else {
          // Loop to end
          slideIndex = maxIndex;
          updateCarousel();
        }
      });
      
      // Event listeners for pagination
      pagination.forEach(dot => {
        dot.addEventListener('click', () => {
          const page = parseInt(dot.getAttribute('data-page'));
          slideIndex = (page - 1) * slidesPerView;
          updateCarousel();
        });
      });
      
      // Responsive handling
      window.addEventListener('resize', () => {
        updateCarousel();
      });
      
      // Mobile Navigation
      const checkBtn = document.querySelector('.checkbtn');
      const navCheck = document.getElementById('check');
      const navItems = document.querySelectorAll('nav ul li a');
      
      // Close mobile menu when clicking menu items
      navItems.forEach(item => {
        item.addEventListener('click', () => {
          navCheck.checked = false;
        });
      });
    });
  </script>
